root = true

[*]
guidelines = 80, 120
end_of_line = crlf
insert_final_newline = true

[*.cs]
indent_style = space
indent_size = 4
dotnet_diagnostic.SA1000.severity = none  # SA1000: The spacing around a C# keyword is incorrect.
dotnet_diagnostic.SA1101.severity = none  # SA1101: Prefix local calls with this
dotnet_diagnostic.SA1200.severity = none
dotnet_diagnostic.SA1309.severity = none  # SA1309: Fieldnames must not begin with underscore
dotnet_diagnostic.SA1600.severity = none  # SA1600: Elements should be documented
